<?xml version="1.0" encoding="utf-8"?>
<!-- 💎 Widget Premium Blocked Small (2x2) - Widget premium bloqué -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blocked_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_blocked"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp">

    <!-- 💎 Icône premium -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="💎"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginBottom="6dp" />

    <!-- 💎 Titre premium requis -->
    <TextView
        android:id="@+id/blocked_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_premium_required"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="4dp" />

    <!-- 📝 Message débloquage -->
    <TextView
        android:id="@+id/blocked_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_unlock_premium"
        android:textSize="9sp"
        android:textColor="#E0FFFFFF"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="1dp" />

</LinearLayout>